{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist-app",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node", "electron"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-app"]
}

