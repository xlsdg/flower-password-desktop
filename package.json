{
  "name": "FlowerPassword",
  "productName": "FlowerPassword",
  "version": "1.1.0",
  "description": "flower password electron app",
  "main": "app.js",
  "scripts": {
    "test": "standard",
    "start": "electron ./",
    "build": "electron-packager . FlowerPassword --platform=darwin --arch=x64 --icon=images/FlowerPassword.icns --out=dist --overwrite --app-bundle-id=org.xlsdg.flowerpassword --app-version=$npm_package_version",
    "publish": "publish-release --assets FlowerPassword.zip"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xlsdg/flower-password-desktop.git"
  },
  "author": "xLsDg",
  "license": "MIT",
  "dependencies": {
    "electron": "^1.4.5",
    "fix-path": "^2.0.0",
    "menubar": "^5.1.0",
    "node-flower-password": "^1.0.0",
    "user-env": "^2.0.0"
  },
  "devDependencies": {
    "electron-packager": "^8.2.0",
    "electron-prebuilt": "^1.4.5",
    "publish-release": "^1.3.2",
    "standard": "^8.5.0"
  },
  "standard": {
    "ignore": [
      "FlowerPassword.app/**"
    ]
  }
}
