{
  "name": "FlowerPassword",
  "productName": "FlowerPassword",
  "version": "1.3.0",
  "description": "flower password electron app",
  "main": "app.js",
  "scripts": {
    "test": "standard",
    "start": "electron ./",
    "build": "electron-packager . FlowerPassword --platform=darwin --arch=x64 --icon=images/FlowerPassword.icns --out=dist --overwrite --app-bundle-id=org.xlsdg.flowerpassword --app-version=$npm_package_version",
    "publish": "publish-release --assets FlowerPassword.zip"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xlsdg/flower-password-desktop.git"
  },
  "author": "xLsDg",
  "license": "MIT",
  "dependencies": {
    "fix-path": "^2.1.0",
    "flowerpassword.js": "^2.0.0",
    "menubar": "^5.2.3",
    "psl": "^1.1.31",
    "urlite": "^2.0.2",
    "user-env": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-packager": "^13.0.1",
    "electron-prebuilt": "^1.4.13",
    "publish-release": "^1.6.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "FlowerPassword.app/**"
    ]
  }
}
